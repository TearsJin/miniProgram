.clanderTable{
  margin-top: 2.3rem;
  border-bottom: 1px solid rgb(56, 102, 163);
  display: block;
  height: 20.1rem;
}

.tr{
  background-color: rgba(77,153,207, 0.342);
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.6rem;
  align-items: center;
}

.th{
  width: 40%;
  justify-content: center;
  background: rgb(77,153,207) ;
  color: #fff;
  display: flex;
  height: 100%;
  align-items: center;
  /* font-weight: 550; */
}
.td{
  width: 40%;
  height: 100%;
  justify-content: center;
  text-align: center;
  align-items: center;
  display: flex;
  /* font-weight: 450; */
}


.nonThisMonth{
  color: rgba(128, 128, 128, 0.425);
}

.today{
  height: 80%;
  width: 72%;
  margin-left:10%;
  margin-right: 10%;
  justify-content: center;
  text-align: center;
  align-items: center;
  display: flex;
  /* background-color: rgb(88, 140, 236); */
  border-bottom: 3px solid rgb(255, 171, 169);
  /* font-weight: 500; */
  font-weight: 900;
  font-size: 1.15rem;
  color: rgb(254,71,76);
}

.ctfinformation{
  font-size: x-small;
}


.clanderYm{
  display: block;
  float: left;
  height: 90%;
  text-align: center;
  font-size: 1.2rem;
  margin: 0;
  margin-left: 0.5rem;
  padding: 0;
  padding-top: 0.15rem;
  color: rgb(255, 255, 255);
}
.clanderBar{
  width: 100%;
  height: 2rem;
  background-color: rgb(51,147,183);
}
/* */
.clanderButton{
  float:right;
  font-weight:bolder;
  display: block;
  height:100%;
  width: 32px;
  font-size: 10px;
  text-align: center;
  padding: 0;
  margin: 0;
  z-index: 1;
}

.clanderDetail{
  position: absolute;
  min-height: 100%;
  padding-bottom: 1rem;
  width: 100%;
  background-color: rgba(56,67,109, 0.9);
  border-bottom: 1px solid white;
  z-index: 2;
}
.clanderLastPage{
  background: url('data:image/png;base64,');
  background-position: center;
  background-repeat: no-repeat;
}

.clanderNextPage{
  background: url('data:image/png;base64,');
  background-position: center;
  background-repeat: no-repeat;
}
.closeDetail{
  height: 2.5rem;
  width: 4rem;
  float: right;
  text-align: center;
  font-size: 1rem;
  color: white;
  background-color: #8aa4fa;
  padding: 0;
  margin-right:1.5rem;
  margin-top: 1rem;
  border: 0.01rem solid white;
}

.closeDetailAdd{
  float: left;
  margin-left: 1.5rem;
}

.addDetail{
  width: 100%;
  height: 100%;
  color: white;
  display: none;
  background-color: #38436d;
  /* border: 1px solid white; */
  /* border-radius: 1rem; */
  z-index: 9;
  position: fixed;
  top: 2.3rem;
  /* padding-top: 20px; */
}

.eventInput{
  /* border: 1px solid black; */
  background-color: rgba(128, 128, 128, 0.1);
  height: 2.5rem;
  width: 80%;
  margin-left: 8%;
  margin-bottom: 1.5rem;
  color: white;
  padding-left: 1rem;
}

.eventText{
  float: left;
}

.countDown-add-btn{
  float: right;
  right: 1.2rem;
  width: 32px;
  height: 32px;
  background-image: url('data:image/png;base64,');
  background-color: rgba(18,150,219,0);
}


