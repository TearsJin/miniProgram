/* pages/test/test.wxss */


.clanderTable{
  margin-top: 2.6rem;
  border-bottom: 1px solid rgb(56, 102, 163);
  display: block;
  height: 20.1rem;
}

.tr{
  background-color: rgba(100, 148, 237, 0.342);
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.6rem;
  align-items: center;
}

.th{
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 100%;
  align-items: center;
}
.td{
  width: 40%;
  height: 100%;
  justify-content: center;
  text-align: center;
  align-items: center;
  display: flex;
}

.nonThisMonth{
  color: rgba(128, 128, 128, 0.425);
}

.today{
  height: 80%;
  width: 80%;
  justify-content: center;
  text-align: center;
  align-items: center;
  display: flex;
  background-color: rgb(88, 140, 236);
  border: 1px solid white;
  font-weight: 500;
}

.ctfinformation{
  font-size: x-small;
}


.clanderYm{
  display: block;
  float: left;
  height: 100%;
  text-align: center;
  font-size: 1.3rem;
  margin: 0;
  padding: 0;
}
.clanderBar{
  width: 100%;
  height: 2rem;
  background-color: rgba(128, 128, 128, 0.349);
}

.clanderButton{
  float:right;
  font-weight:bolder;
  display: block;
  height:100%;
  width: 32px;
  font-size: 10px;
  text-align: center;
  padding: 0;
  margin: 0;
  z-index: 1;
}

.clanderDetail{
  position: absolute;
  min-height: 20.1rem;
  width: 100%;
  background-color: white;
  border: 1px solid black;
  z-index: 2;
}

.closeDetail{
  height: 1.5rem;
  width: 1.5rem;
  float: right;
  text-align: center;
  font-size: 10px;
  padding: 0;
}

.addDetail{
  width: 100%;
  display: none;
  background-color: white;
  border: 1px solid black;
  z-index: 9;
  position: fixed;
  top: 120px;
  padding-top: 20px;
}

.eventInput{
  border: 1px solid black;
  height: 100%;
  width: 50%;
}

.eventText{
  float: left;
}

.detailEvents{
  border-bottom: 1px solid black;
  float: right;
  width: 100%;
}

.finish-true{
  background-color: green;
}

.finish-false{
  background-color: red;
}


/* 今日待办组件 */
@import "../Wxss/toDoEvent.wxss";

@import "../Wxss/moduleSelect.wxss";

/* 水电费组件 */
